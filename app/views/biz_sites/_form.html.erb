<%= simple_form_for(@biz_site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :thumb, placeholder: '320*480px' %>
    <%= f.input :url %>
    <%= f.input :description, as: :text %>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
