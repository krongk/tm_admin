
<%= link_to '添加案例', new_biz_site_path, class: 'btn btn-lg btn-primary' %>
<hr/>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Thumb</th>
      <th>Url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @biz_sites.each do |biz_site| %>
      <tr>
        <td rowspan="2"><%= biz_site.title %></td>
        <td><%= biz_site.thumb %></td>
        <td><%= biz_site.url %></td>
        <td><%= link_to '查看', biz_site %></td>
        <td><%= link_to '修改', edit_biz_site_path(biz_site) %></td>
        <td><%= link_to '删除', biz_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td colspan="5"><%= biz_site.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @biz_sites %>
<br>

