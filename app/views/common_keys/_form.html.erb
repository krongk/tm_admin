<%= simple_form_for(@common_key) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :typo %>
    <%= f.input :title %>
    <%= f.input :placeholder %>
    <%= f.input :hint %>
    <%= f.input :default_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
