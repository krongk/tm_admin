<h1>会员列表</h1>

<div class="row">
  <div class="col-lg-6">
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" name="phone" placeholder="输入电话号码">
      </div>
      <button type="submit" class="btn btn-default">查询</button>
    </form>
  </div><!-- /.col-lg-6 -->
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>认证类型</th>
      <th>认证号码</th>
      <th>验证码</th>
      <th>网站数量</th>
      <th>Token created at</th>
      <th>Token confirmed</th>
      <th>Current sign in at</th>
      <th>Last sign in at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.auth_type %></td>
        <td><%= member.auth_id %></td>
        <td><%= member.auth_token %></td>
        <td><%= link_to member.sites.count, member %></td>
        <td><%= member.token_created_at %></td>
        <td><%= member.token_confirmed %></td>
        <td><%= member.current_sign_in_at %></td>
        <td><%= member.last_sign_in_at %></td>
        <td><%= link_to '详细', member %></td>
        <td><%= link_to '修改', edit_member_path(member) %></td>
        <td><%= link_to '删除', member, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @members %>
