<%= simple_form_for(@templates_keystore) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :source_type, input_html: {value: @templates_keystore.source_type || params[:source_type]} %>
    <%= f.input :source_id, input_html: {value: @templates_keystore.source_id || params[:source_id]} %>
    <%= f.input :key %>
    <%= f.input :value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, input_html: {class: 'btn btn-lg btn-primary'} %>
  </div>
<% end %>
