<h1>应用支付状态表</h1>

<hr/>

<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <%= link_to site_payments_path, class: "list-group-item active" do %>
        查看全部 <span class="badge"><%= SitePayment.all.size %></span>
      <% end %>
      <% SitePaymentsHelper::STATE.each do |state| %>
        <%= link_to site_payments_path(state: state), class: "list-group-item" do %>
          <%= state %> <span class="badge"><%=  SitePayment.count(state) %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <%= render 'list'%>
  </div>
</div>