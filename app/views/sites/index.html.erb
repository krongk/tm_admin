<h1>Listing sites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Template</th>
      <th>Sort title</th>
      <th>Title</th>
      <th>Description</th>
      <th>Domain</th>
      <th>Is published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.user %></td>
        <td><%= site.short_title %></td>
        <td><%= site.title %></td>
        <td><%= site.description %></td>
        <td><%= site.domain %></td>
        <td><%= site.is_published %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

