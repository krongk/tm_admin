<h1>应用列表</h1>

<div class="row">
  <div class="col-lg-4">
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" name="q" placeholder="输入标题关键词">
      </div>
      <button type="submit" class="btn btn-default">查询</button>
    </form>
  </div><!-- /.col-lg-4 -->
  <div class="col-lg-8">
    <% @templates.each do |t| %>
      <%=link_to t.title, sites_path(template_id: t.id) %> &nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
  </div>
</div>

<%= render partial: 'list', locals: {sites: @sites} %>

<br>
