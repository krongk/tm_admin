<%= simple_form_for(@payment_token) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :count, as: :integer %>
    <%= f.association :user, collection: User.all.select{|u| u.has_role?(ENV["ROLES"]['VIP'])} %>
    <%= f.input :status %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
